{
  "name": "tailorcast",
  "version": "1.0.0",
  "description": "tailorcast",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "controllers/**",
      "services/**"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./test/reports"
  },
  "jest-junit": {
    "outputDirectory": "test/reports/junit",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "jestSonar": {
    "reportPath": "test/reports",
    "reportFile": "sonar-reporter.xml",
    "indent": 4
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.21.2",
    "http-errors": "^1.7.3",
    "morgan": "^1.9.1",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.4",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {},
  "scripts": {
    "start": "node ./bin/www",
    "test": "jest --runInBand --setupFiles ./test/setup.js",
    "test-watch": "jest --runInBand --watch --setupFiles ./test/setup.js"
  },
  "repository": {
    "type": "git",
    "url": "https://git.paradigmadigital.com/tailorcast/tailorcast-backoffice-api"
  },
  "author": "",
  "license": "ISC"
}
